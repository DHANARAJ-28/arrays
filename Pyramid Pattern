import java.util.*;
class C{
    public static void main(String[] args){
        Scanner s =new Scanner(System.in);
        int  a=s.nextInt();
        for(int i=0; i<a; i++){
            for(int j=1; j<a-i-1; j++){
                System.out.print(" ");
            }
            for(int k=0; k<(2*i+1); k++){
            System.out.print("*");
        }
        
        System.out.println();
    }}
}
